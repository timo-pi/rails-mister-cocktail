<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1468072114808-903e572b8ead?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1866&q=80');">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
    <div class="create-btn"><%= link_to 'Create Cocktail', new_cocktail_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 col-lg-3">
      <div class="card" style="background-image: url('https://images.unsplash.com/photo-1509669803555-fd5edd8d5a41?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80');">
       <span class="card-description"> <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2></span>
     </div>
   </div>
   <% end %>
 </div>
</div>
